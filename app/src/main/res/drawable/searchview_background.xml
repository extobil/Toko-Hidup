<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#22000000"/> <!-- Lebih halus -->
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- Background Putih + Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" />
            <corners android:radius="6dp" />
            <padding
                android:left="8dp"
                android:top="4dp"
                android:right="8dp"
                android:bottom="4dp"/>
        </shape>
    </item>
</layer-list>
