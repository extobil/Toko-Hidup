<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/back"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Informasi Perusahaan"
                android:textSize="23sp"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

        ---

        <ImageView
            android:id="@+id/companyLogo"
            android:layout_width="238dp"
            android:layout_height="163dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/tokohidup" />

        <TextView
            android:id="@+id/companyDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toko Hidup adalah toko yang berdedikasi untuk menyediakan produk-produk berkualitas tinggi dan layanan pelanggan terbaik. Kami berkomitmen untuk memperkaya hidup Anda dengan inovasi dan keandalan. Jelajahi berbagai pilihan produk kami mulai dari elektronik, kebutuhan rumah tangga, fashion, hingga barang-barang unik lainnya. Kepuasan pelanggan adalah prioritas utama kami."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:justificationMode="inter_word"
            android:layout_marginBottom="24dp"/>

        ---

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informasi Kontak"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/category_background"
            android:padding="5dp"
            android:gravity="left|center"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/instagram"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instagram: "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.tokohidup.com"
                android:textColor="#2196F3"
                android:onClick="openWebsite"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/category_background"
            android:gravity="left|center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/wa"
                android:layout_marginRight="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WhatsApp: "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+6285743448157"
                android:textColor="#2196F3"
                android:onClick="callPhone"/>
        </LinearLayout>

        ---

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lokasi Kami"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnOpenMaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#064A55"
            android:text="Buka di Google Maps"
            android:layout_marginBottom="50dp"/>

    </LinearLayout>
</ScrollView>