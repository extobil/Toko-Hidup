<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    card_view:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:id="@+id/item_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- FOTO PRODUK -->
        <ImageView
            android:id="@+id/imgFotoProduk"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp"
            android:contentDescription="Foto Produk"
            android:background="#F5F5F5"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvNoorder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No Order: #12345"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#333333" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvNamaMobil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Product"
            android:textSize="16sp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/tvAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat Kirim: Kota, Provinsi"
            android:textSize="14sp"
            android:textColor="#888888"
            android:drawableStart="@drawable/ic_address"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvEstimasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimasi Sampai: 5-7 Hari"
            android:textSize="14sp"
            android:textColor="#888888"
            android:drawableStart="@drawable/ic_delivery_truck"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvTanggalOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Order: 2025-06-19"
            android:textSize="14sp"
            android:textColor="#888888"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginVertical="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subtotal:"
                android:textSize="14sp"
                android:textColor="#555555" />
            <TextView
                android:id="@+id/tvSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 123.000.000"
                android:textSize="14sp"
                android:textColor="#555555" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ongkir:"
                android:textSize="14sp"
                android:textColor="#555555" />
            <TextView
                android:id="@+id/tvOngkir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 20.000"
                android:textSize="14sp"
                android:textColor="#555555" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pembayaran:"
                android:textSize="14sp"
                android:textColor="#555555" />
            <TextView
                android:id="@+id/tvPyment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COD"
                android:textSize="14sp"
                android:textColor="#555555" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Bayar:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/tvTotalBayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 123.020.000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Menunggu Konfirmasi"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#66BB6A"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp" />

        <LinearLayout
            android:id="@+id/layoutUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvNamaFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama file: "
                android:textColor="#555555"
                android:layout_marginBottom="8dp"
                android:textSize="14sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnPilihGambar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Bukti Pembayaran"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"
                android:textAllCaps="false"
                android:elevation="4dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgBuktiBayar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:background="#F0F0F0"
            android:contentDescription="Bukti Pembayaran"
            android:adjustViewBounds="true" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
